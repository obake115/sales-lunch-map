{
  "expo": {
    "name": "営業ランチマップ",
    "slug": "sales-lunch-map",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "saleslunchmap",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFF4D6"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "jp.kawashun.saleslunchmap",
      "infoPlist": {
        "NSCameraUsageDescription": "招待コードのQRを読み取るためにカメラを使用します。",
        "NSLocationWhenInUseUsageDescription": "店舗の近くで買い物メモをリマインドするために位置情報を使用します。",
        "NSPhotoLibraryUsageDescription": "プロフィール写真を選択するために写真ライブラリへのアクセスを許可してください。",
        "NSPhotoLibraryAddUsageDescription": "プロフィール写真を保存するために写真ライブラリへのアクセスを許可してください。",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "jp.kawashun.saleslunchmap",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.RECORD_AUDIO"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#FFF4D6"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-image-picker",
        {
          "photosPermission": "プロフィール写真を選択するために写真ライブラリへのアクセスを許可してください。"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "招待コードのQRを読み取るためにカメラへのアクセスを許可してください。"
        }
      ],
      [
        "react-native-google-mobile-ads",
        {
          "androidAppId": "ca-app-pub-9492630687794560~7303765475",
          "iosAppId": "ca-app-pub-9492630687794560~6268195028"
        }
      ],
      "@react-native-community/datetimepicker",
      "expo-font",
      "./plugins/withDisableAndroidTablet"
    ],
    "cli": {
      "appVersionSource": "remote"
    },
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "dcf2b66d-ff77-44d4-918a-2aae335a7281"
      }
    },
    "owner": "kawashun"
  }
}
