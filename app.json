{
  "expo": {
    "name": "近づいたら買い物メモ",
    "slug": "geo-memo-reminder-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "geomemoreminderapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFF4D6"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "jp.kawashun.geomemoreminder",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "店舗の近くで買い物メモをリマインドするために位置情報を使用します。",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "バックグラウンドでも店舗の近くで買い物メモをリマインドするために位置情報を使用します。",
        "UIBackgroundModes": [
          "location"
        ],
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "jp.kawashun.geomemoreminder",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#FFF4D6"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "react-native-google-mobile-ads",
        {
          "androidAppId": "ca-app-pub-9492630687794560~7303765475",
          "iosAppId": "ca-app-pub-9492630687794560~9738357128"
        }
      ],
      "@react-native-community/datetimepicker"
    ],
    "cli": {
      "appVersionSource": "remote"
    },
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "2d622703-a9e1-4574-93b9-649a58b0b392"
      }
    },
    "owner": "kawashun"
  }
}
